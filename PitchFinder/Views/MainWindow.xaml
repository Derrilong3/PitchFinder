<Window x:Class="PitchFinder.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WPF App" Height="768" Width="1280" MinWidth="1280" MinHeight="768" MaxWidth="1280" MaxHeight="768">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" 
                 ItemsSource="{Binding Modules}" 
                 SelectedItem="{Binding SelectedModule, Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ContentPresenter x:Name="contentPresenter" Grid.Column="1" 
                          Content="{Binding UserInterface}" />
    </Grid>
</Window>
