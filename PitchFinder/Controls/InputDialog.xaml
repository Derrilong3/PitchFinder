<Window x:Class="PitchFinder.Controls.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PitchFinder.Controls"
        mc:Ignorable="d"
        MinHeight="150" MinWidth="300" MaxHeight="150" MaxWidth="300" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <TextBlock x:Name="header" Margin="0,10,0,0" TextWrapping="Wrap" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Width="260"/>
        <TextBox x:Name="inputText" TextWrapping="Wrap" Width="260" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,35,0,0"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="30" Width="100" Click="AcceptButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="30" Width="100" Click="CancelButton_Click"/>
    </Grid>
</Window>
